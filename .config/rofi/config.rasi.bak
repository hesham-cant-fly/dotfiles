configuration {
    modes : [ run, drun, keys, combi ];
    combi-mode : [ window, drun, run ];
}

//@theme "gruvbox-dark-hard"
@import "catppuccin-mocha.rasi"

entry {
    placeholder : "Search for an app.";
    cursor : pointer;
}

element {
    orientation : horizontal;
    children : [ element-icon, element-text ];
    spacing : 10px;
}

element-icon {
    size: 2em;
}

entry, element-text {
    vertical-align: 0.5;
}

entry {
    cursor-color: rgb(220, 20, 60);
    cursor-width: 10px;
}
